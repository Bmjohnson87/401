from scapy.all import *

# Define host IP and port range
host_ip = "192.168.1.100"  # Replace with the target IP address
port_range = range(20, 81)  # Scan ports 20 to 80

# Function to scan a single port
def scan_port(port):
    packet = IP(dst=host_ip) / TCP(dport=port, flags="S")
    response = sr1(packet, timeout=2, verbose=False)

    if response is None:
        print(f"Port {port} is filtered (silently dropped).")
    elif response[TCP].flags == 0x12:
        send_rst(response[IP].src, response[TCP].sport)  # Send RST packet to close connection
        print(f"Port {port} is open.")
    elif response[TCP].flags == 0x14:
        print(f"Port {port} is closed.")

# Scan each port in the range
for port in port_range:
    scan_port(port)
